<h2 class="text-center">Forgot your password?</h2>

<div class="row">
  <div class="col-md-12">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: 'form-horizontal', role: 'form', method: :post }) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <div class="control-label col-md-3">
          <%= f.label :email %>
        </div>
        <div class="col-md-9">
          <%= f.email_field :email, autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-offset-3 col-md-9">
          <%= f.submit "Send me reset password instructions", class: 'btn btn-default btn-sm' %>
        </div>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
